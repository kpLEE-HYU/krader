# Krader Configuration
# Copy this file to .env and modify as needed
# All settings have defaults - only set what you need to change

# =============================================================================
# MODE
# =============================================================================
# Options: live, paper, test
# - live: Real trading (use with caution!)
# - paper: Paper trading (모의투자)
# - test: Uses mock broker, no real connection
KRADER_MODE=paper

# =============================================================================
# BROKER
# =============================================================================
# Broker type: kiwoom or mock
KRADER_BROKER__TYPE=kiwoom

# Your Kiwoom account number (required for live/paper)
KRADER_BROKER__ACCOUNT_NUMBER=1234567890

# =============================================================================
# STRATEGY
# =============================================================================
# Strategy to run (must be registered in registry)
# Use: python main.py --list-strategies to see available
KRADER_STRATEGY=pullback_v1

# =============================================================================
# RISK LIMITS
# =============================================================================
# Max shares per position
KRADER_RISK__MAX_POSITION_SIZE=1000

# Max portfolio exposure (0.8 = 80%)
KRADER_RISK__MAX_PORTFOLIO_EXPOSURE_PCT=0.8

# Daily loss limit in KRW (stops trading if exceeded)
KRADER_RISK__DAILY_LOSS_LIMIT=1000000

# Transaction cost rate (0.00015 = 0.015%)
# Typical Korean stock commission is ~0.015%
KRADER_RISK__TRANSACTION_COST_RATE=0.00015

# Max orders per day
KRADER_RISK__MAX_TRADES_PER_DAY=50

# Position size per trade as % of total equity (0.05 = 5%)
# Used when strategy doesn't specify quantity
KRADER_RISK__POSITION_SIZE_PCT=0.05

# =============================================================================
# TRADING HOURS (KST)
# =============================================================================
KRADER_RISK__TRADING_START_HOUR=9
KRADER_RISK__TRADING_START_MINUTE=0
KRADER_RISK__TRADING_END_HOUR=15
KRADER_RISK__TRADING_END_MINUTE=30

# =============================================================================
# LOGGING
# =============================================================================
# Options: DEBUG, INFO, WARNING, ERROR
KRADER_LOGGING__LEVEL=INFO
KRADER_LOGGING__LOG_DIR=logs

# =============================================================================
# DATABASE
# =============================================================================
KRADER_DATABASE__PATH=krader.db

# =============================================================================
# EMAIL NOTIFICATIONS (optional)
# =============================================================================
KRADER_EMAIL__ENABLED=false
KRADER_EMAIL__SMTP_HOST=smtp.gmail.com
KRADER_EMAIL__SMTP_PORT=587
KRADER_EMAIL__SMTP_USER=
KRADER_EMAIL__SMTP_PASSWORD=
KRADER_EMAIL__FROM_ADDRESS=
KRADER_EMAIL__TO_ADDRESSES=["your-email@example.com"]
KRADER_EMAIL__ENVIRONMENT=dev
